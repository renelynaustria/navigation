<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ortega.project.UndergraduatePrograms"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="152dp"
            android:layout_marginTop="-13dp"
            android:layout_marginLeft="-12dp"
            android:src="@drawable/undergraduate_header_02"
            />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/back"
            android:src="@drawable/backbtn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/btncea"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/undergraduateprograms_cea"
                android:layout_marginTop="-17dp"/>

            <ImageView
                android:id="@+id/btncite"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/undergraduateprograms_cite"
                android:layout_marginTop="-37dp"/>

            <ImageView
                android:id="@+id/btnmare"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/undergraduateprograms_mare"
                android:layout_marginTop="-37dp"/>

            <ImageView
                android:id="@+id/btncbe"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/undergraduateprograms_cbe"
                android:layout_marginTop="-37dp"/>

            <ImageView
                android:id="@+id/btncte"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/undergraduateprograms_cte"
                android:layout_marginTop="-37dp"
                android:layout_marginBottom="-19dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>