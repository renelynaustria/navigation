<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#d3d3d3"
    tools:context="com.ortega.project.MainActivity"
    android:id="@+id/main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_homepg_1"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        />

    <SlidingDrawer
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/slidingDrawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:gravity="center"
        android:handle="@+id/handle"
        android:orientation="vertical"
        android:rotation="360"
        android:animateOnClick="true">

        <LinearLayout
            android:id="@+id/handle"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/tiplogo_04"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/tiplogo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technological Institue of the Philippines"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/slideup"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                android:layout_gravity="center"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="70dp"
                    android:id="@+id/button1"
                    android:src="@drawable/button1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="15dp"
                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="70dp"
                    android:id="@+id/button2"
                    android:src="@drawable/button2"
                    android:layout_marginLeft="70dp"
                    />

            </LinearLayout>
        </RelativeLayout>

    </SlidingDrawer>

    </RelativeLayout>