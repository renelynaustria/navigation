<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ortega.project.AboutTip"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="152dp"
            android:layout_marginTop="-13dp"
            android:layout_marginLeft="-20dp"
            android:src="@drawable/abouttip" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/back"
            android:src="@drawable/backbtn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"/>

    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnhistory"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/abouttip_history"
                android:layout_marginTop="-17dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/btnvisionmission"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/abouttip_visionandmission"
                android:layout_marginTop="-37dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/btnaboutthelogo"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/abouttip_aboutthelogo"
                android:layout_marginTop="-37dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/btnacademicpolicies"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/abouttip_academicpolicies"
                android:layout_marginTop="-37dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/btnadministration"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/abouttip_administration"
                android:layout_marginTop="-37dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/btnaboutthepres"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/abouttip_aboutthepres"
                android:layout_marginTop="-37dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/btnhymfightsong"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/abouttip_tiphymnandfightsong"
                android:layout_marginTop="-37dp"
                android:layout_marginBottom="-19dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
