<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ortega.project.ShsProgram"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400dp"
            android:layout_height="152dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="-20dp"
            android:src="@drawable/shsprogram_header_01" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/backbtn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnabm"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/shsprograms_abm"
                android:layout_marginTop="-17dp"/>

            <ImageView
                android:id="@+id/btnhumms"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/shsprograms_humms"
                android:layout_marginTop="-37dp"/>

            <ImageView
                android:id="@+id/btnstem"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/shsprograms_stem"
                android:layout_marginTop="-37dp"/>

            <ImageView
                android:id="@+id/btngeneralacademic"
                android:layout_width="361dp"
                android:layout_height="152dp"
                app:srcCompat="@drawable/shsprograms_generalacademic"
                android:layout_marginTop="-37dp"
                android:layout_marginBottom="-19dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
