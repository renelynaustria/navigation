<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#d3d3d3"
    tools:context="com.ortega.project.Menu"
    android:id="@+id/main">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
        <ViewFlipper
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/bckgrndViewFlipper1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bckgrndImageView1"
                android:src="@drawable/bg_homepg_1"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bckgrndImageView2"
                android:src="@drawable/bg_homepg_2"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bckgrndImageView3"
                android:src="@drawable/bg_homepg_3"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bckgrndImageView4"
                android:src="@drawable/bg_homepg_4"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bckgrndImageView5"
                android:src="@drawable/bg_homepg_5"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bckgrndImageView6"
                android:src="@drawable/bg_homepg_6"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />
        </ViewFlipper>

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="42dp"
            android:layout_height="32dp"
            android:src="@drawable/help"
            android:layout_gravity="right"
            android:alpha=".80"/>
    </FrameLayout>


    <SlidingDrawer
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/slidingDrawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:content="@+id/content"
        android:gravity="center"
        android:handle="@+id/handle"
        android:orientation="vertical"
        android:rotation="360"
        android:animateOnClick="true">

        <LinearLayout
            android:id="@+id/handle"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:gravity="right"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:src="@drawable/tiplogo_04"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:id="@+id/tiplogo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technological Institute of the Philippines"
                android:textSize="18dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/slideup"
                android:textColor="#ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/slide"
                android:text="Slide Up"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_gravity="center"
                android:alpha=".80"/>

        </LinearLayout>


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button1"
                android:layout_width="100dp"
                android:layout_height="83dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/button1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="70dp"
                android:src="@drawable/button2"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="51dp"
                android:layout_marginTop="155dp"
                android:text="About T.I.P."
                android:textColor="@color/white"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="155dp"
                android:text="S.H.S. Program"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="188dp"
                android:src="@drawable/button3"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="188dp"
                android:src="@drawable/button4"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="270dp"
                android:text="Undergraduate"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-80dp"
                android:layout_marginTop="285dp"
                android:text="Programs"
                android:textColor="@color/white"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="270dp"
                android:text="Graduate Studies"
                android:textColor="@color/white"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button5"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="320dp"
                android:src="@drawable/button5"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/button7"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="320dp"
                android:src="@drawable/button6"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="61dp"
                android:layout_marginTop="400dp"
                android:text="T.I.P. Life"
                android:textColor="@color/white"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="400dp"
                android:text="T.I.P Directory"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

    </RelativeLayout>

    </SlidingDrawer>


</RelativeLayout>
